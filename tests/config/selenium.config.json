{
  "browsers": ["chrome"],
  "headless": true,
  "runCrossBrowser": false,
  "generateReport": true,
  "outputDir": "./test-results",
  "testSettings": {
    "timeout": 30000,
    "retries": 2,
    "screenshotOnFailure": true,
    "performanceThreshold": 5000
  },
  "webDriverOptions": {
    "chrome": {
      "args": [
        "--disable-dev-shm-usage",
        "--disable-gpu",
        "--no-sandbox"
      ]
    },
    "firefox": {
      "prefs": {
        "dom.webnotifications.enabled": false,
        "media.navigator.permission.disabled": true
      }
    },
    "edge": {
      "args": [
        "--disable-dev-shm-usage"
      ]
    }
  },
  "testData": {
    "randomLocationCount": 30,
    "regionalSampleSize": 5,
    "cityTestCount": 4,
    "includeTouristLocations": true,
    "includeEdgeCases": true
  },
  "reporting": {
    "htmlReport": true,
    "jsonReport": true,
    "consoleOutput": "verbose",
    "saveScreenshots": true,
    "includePerformanceMetrics": true
  }
}